{
  "name": "ContactsManager",
  "description": "Contacts Provider App",
  "version": "1.5",
  "type": "certified",
  "role": "system",
  "developer": {
    "name": "Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "permissions": {
    "contacts":{ "access": "readwrite" },
    "alarms": {},
    "systemXHR": {},
    "phonenumberservice": {}
  },
  "locales": {
    "en-US": {
      "name": "Contacts Provider",
      "description": "Contacts Provider App"
    }
  },
  "default_locale": "en-US",
  "messages": [
     { "alarm": "/periodic_sync.html" }
  ],
  "connections": {
    "contacts-sync": {
      "description": "Contacts DataBase synchronization",
      "rules": {
        "manifestURLs": ["*"]
      },
      "handler_path": "/on_demand_sync.html"
    }
  }
}
