{
  "name": "Home",
  "description": "Smart Screen Home App",
  "launch_path": "/index.html",
  "type": "certified",
  "role": "homescreen",
  "developer": {
    "name": "The Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "locales": {
    "en-US": {
      "name": "Home",
      "description": "Smart Screen Home App"
    }
  },
  "activities": {
    "pin": {
      "filters": {
        "type": {
          "required": true
        },
        "manifestURL": { "pattern": "(https?|app):.{1,16384}" },
        "url": { "pattern": "https?:.{1,16384}" }
      }
    },
    "unpin": {
      "filters": {
        "manifestURL": { "pattern": "(https?|app):.{1,16384}" },
        "url": { "pattern":"https?:.{1,16384}" }
      }
    }
  },
  "connections": {
    "appdeck-channel": {
      "description": "communications for app-deck to add/remove application cards",
      "rules": {}
    }
  },
  "default_locale": "en-US",
  "icons": {
    "128": "/style/icons/Blank.png"
  },
  "orientation": "landscape",
  "permissions": {
    "webapps-manage": {},
    "open-remote-window":{},
    "wifi-manage":{},
    "settings":{ "access": "readwrite" },
    "systemXHR":{},
    "moz-extremely-unstable-and-will-change-webcomponents":{}
  },
  "datastores-owned": {
    "home_cards": {
      "access": "readwrite",
      "description": "Stores all type of cards/decks/apps"
    }
  }
}
