#! /bin/bash -e

export GAIATEST_ACKNOWLEDGED_RISKS=true
export GAIATEST_SKIP_WARNING=true

DIR="$( cd "$( dirname "$SOURCE" )" && pwd )"

# Get the b2g desktop binary...
get_b2g_bin() {
  local folder=$(find . -d 1 -name 'b2g' | cut -f 1 -d " ")
  # Download b2g...
  if [ -z "$folder" ];
  then
    # Everything goes to stderr...
    make b2g 1>&2
  fi
  find $folder -follow -name "b2g-bin" | tail -n 1
}


# Get the gaia profile...
get_profile() {
  # TODO: Make configurable
  local folder=profile
  if [ ! -d $folder ];
  then
    # Everything goes to stderr...
    make $folder 1>&2
  fi
  echo $folder
}

b2g=$(get_b2g_bin)
root=tests/python/gaia-ui-tests/gaiatest
profile=$(get_profile)
gaiatest="$root/cli.py"

echo "Using b2g: $b2g"

# Enter the virtual env.
source ./tests/ci/venv.sh &&
# CD into the directory to install python libs.
cd $root/../ && \
# Ensure all dependencies are set.
python setup.py develop && \
# Back to root.
cd $OLDPWD && \

if [ -z "$TEST_FILES" ]; then
  TEST_FILES="$DIR/tests/python/gaia-ui-tests/gaiatest/tests/functional/manifest.ini"
fi


# Run the tests.
if [ "$BUILDAPP" == "device" ]; then
  adb forward tcp:2828 tcp:2828 && \
  python $gaiatest \
    --address=localhost:2828 \
    --type=b2g \
    --timeout=30000 \
    --restart \
    $TEST_FILES
else
  python $gaiatest --app=b2gdesktop \
    --binary=$b2g \
    --profile=$profile \
    --type=b2g \
    --timeout=10000 \
    --restart \
    $TEST_FILES
fi
