{
  "name": "Camera",
  "description": "Gaia Camera",
  "type": "certified",
  "launch_path": "/index.html",
  "orientation": "default",
  "fullscreen": true,
  "developer": {
    "name": "The Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "permissions": {
    "storage":{},
    "device-storage:pictures":{ "access": "readwrite" },
    "device-storage:videos":{ "access": "readwrite" },
    "settings":{ "access": "readonly" },
    "camera":{},
    "geolocation":{},
    "audio-channel-notification":{}
  },
  "activities": {
    "record": {
      "filters": {
        "type": ["photos", "videos"]
       },
      "disposition": "window"
    },
    "pick": {
      "filters": {
        "type": ["image/*", "image/jpeg", "video/*", "video/3gpp"]
       },
      "returnValue": true,
      "disposition": "inline",
      "href": "/index.html#pick"
    }
  },
  "locales": {
    "ar": {
      "name": "الكاميرا",
      "description": " Gaiaالكاميرا"
    },
    "en-US": {
      "name": "Camera",
      "description": "Gaia Camera"
    },
    "fr": {
      "name": "Photo",
      "description": "Appareil photo Gaia"
    },
    "zh-TW": {
      "name": "相機",
      "description": "Gaia 相機"
    }
  },
  "default_locale": "en-US",
  "icons": {
    "60": "/style/icons/Camera_60.png",
    "90": "/style/icons/Camera_90.png",
    "120": "/style/icons/Camera_120.png",
    "135": "/style/icons/Camera_135.png"
  }
}
