{
  "name": "Music",
  "description": "Gaia Music",
  "type": "certified",
  "launch_path": "/index.html",
  "developer": {
    "name": "The Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "permissions": {
    "device-storage:music": {
      "access": "readwrite",
      "description": "Read and Store Music on the Device"
    },
    "settings": {
      "access": "readonly",
      "description": "Remember Music Settings"
    },
    "audio-channel-content": {}
  },
  "activities": {
    "open": {
      "filters": {
        "type": ["audio/mpeg", "audio/ogg", "audio/mp4"]
       },
      "disposition": "inline",
      "returnValue": true,
      "href": "/open.html"
    }
  },
  "locales": {
    "ar": {
      "name": "موسيقى",
      "description": "Gaia موسيقى"
    },
    "en-US": {
      "name": "Music",
      "description": "Gaia Music"
    },
    "fr": {
      "name": "Musique",
      "description": "Lecteur audio Gaia"
    },
    "zh-TW": {
      "name": "音樂",
      "description": "Gaia 音樂"
    }
  },
  "default_locale": "en-US",
  "icons": {
    "120": "/style/icons/Music.png",
    "60": "/style/icons/60/Music.png"
  },
  "orientation": "portrait-primary"
}
