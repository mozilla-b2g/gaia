+    // If the alternatives are delimited by spaces, it means that one or more
+    // of them is more than a single character long.
+    if (!Array.isArray(alternatives)) {
+      if (alternatives.indexOf(' ') !== -1) {
+        alternatives = alternatives.split(' ');
