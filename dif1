+    test('handover messages handling', function() {
+      // simplified pairing record
+      var spr = {
+        tnf: NDEF.TNF_MIME_MEDIA,
+        type: NDEF.MIME_BLUETOOTH_OOB,
+        id: new Uint8Array([1]),
+        payload: new Uint8Array([1])
