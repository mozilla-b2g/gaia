+        tnf: NDEF.TNF_WELL_KNOWN,
+        type: NDEF.RTD_HANDOVER_SELECT,
+        id: new Uint8Array([2]),
+        payload: new Uint8Array([2])
+      };
+
+      // handover request record
+      var hrr = {
+        tnf: NDEF.TNF_WELL_KNOWN,
+        type: NDEF.RTD_HANDOVER_REQUEST,
+        id: new Uint8Array([3]),
+        payload: new Uint8Array([3])
+      };
+
+      sampleMsg.records = [spr, hsr, hrr];
