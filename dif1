+    });
+
+    test('Show searching', function() {
+      mockMobileConnection.voice = {
+        connected: false,
+        emergencyCallsOnly: false
+      };
+      subject.updateConnStates();
+      assert.equal(domConnstateL1.dataset.l10nId, 'searching');
+    });
