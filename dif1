+function wakeUpFindMyDevice(reason) {
+  navigator.mozApps.getSelf().onsuccess = function() {
+    var app = this.result;
+    app.connect('findmydevice-wakeup').then(function(ports) {
+      ports[0].postMessage(reason);
+    });
+  };
