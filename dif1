+  MobileIdDialog.prototype = {
+
+    __proto__: window.SystemDialog.prototype,
+
+    customID: 'mobileid-dialog',
+
+    DEBUG: false,
+
+    panel: null,
+    iframe: null,
+
+    view: function mobileid_view() {
