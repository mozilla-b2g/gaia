+        // trailing whitespace which we have to discard here.
+        if (alternatives.length === 2 && alternatives[1] === '') {
+          alternatives.pop();
         }
+      } else {
+        // No spaces, so all of the alternatives are single characters
+        alternatives = alternatives.split('');
