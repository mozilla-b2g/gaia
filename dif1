+                                          'handleSimplifiedPairingRecord');
+      var stubHandleHSR = this.sinon.stub(NfcHandoverManager,
+                                          'handleHandoverSelect');
+      var stubHandleHRR = this.sinon.stub(NfcHandoverManager,
+                                          'handleHandoverRequest');
+
