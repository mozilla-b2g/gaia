+
+        var l10nArgs = {
+          carrier: carrier,
+          region: region
+        };
+
+        subject.updateConnStates();
+
+        assert.ok(l10nSpy.calledWith(domConnstateL2,
+                                     'operator-info',
+                                     l10nArgs));
+
+        navigator.mozL10n.localize.restore();
+
+        subject._cellbroadcastLabel = null;
+    });
+
+    test('Show no network', function() {
+      mockMobileConnection.voice = {
+        connected: true,
+        state: 'notSearching'
+      };
+      subject.updateConnStates();
